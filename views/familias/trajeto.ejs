<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Acompanhar Trajeto</title>
  <link rel="stylesheet" href="/style.css">
  <link rel="stylesheet" href="https://unpkg.com/leaflet/dist/leaflet.css">
  
  <style>
    #map {
        height: 400px;
        width: 100%;
        margin-bottom: 15px;
    }
    h1 {
      text-align: center;
    }
  </style>
</head>

<body>

<%- include('../partials/header', { user: user }) %>

<main class="container">
  <div class="card">
    <h1>Acompanhar Trajeto</h1>
    
    <div 
        id="map"
        data-locations='<%- JSON.stringify(locations || []) %>'
        data-tracking="<%= tracking %>">
    </div>
    
    <p id="map-status" class="status-text">Carregando...</p>

    <div class="form-actions">
      <a href="/familias/dashboard" class="btn btn-secondary">
        Voltar ao Dashboard
      </a>
    </div>
  </div>
</main>

<script src="https://unpkg.com/leaflet/dist/leaflet.js"></script>
<script>
  const mapDiv = document.getElementById('map');
  const statusText = document.getElementById('map-status');
  
  const map = L.map('map');
  let tutorMarker = null;
  const initialZoom = 13;
  let hasSetInitialView = false;

  L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
    maxZoom: 19
  }).addTo(map);

  function updateMarker(lat, lng) {
    const latLng = [lat, lng];

    if (!tutorMarker) {
      tutorMarker = L.marker(latLng).addTo(map).bindPopup("Localização atual do Tutor").openPopup();
    } else {
      tutorMarker.setLatLng(latLng);
    }
    
    if (!hasSetInitialView) {
        map.setView(latLng, 16);
        hasSetInitialView = true;
    } else {
        map.panTo(latLng);
    }
  }

  function clearMarker() {
    if (tutorMarker) {
      map.removeLayer(tutorMarker);
      tutorMarker = null;
      hasSetInitialView = false;
    }
  }

  async function fetchTutorLocation() {
    try {
      const response = await fetch('/familias/api/tutor-location');
      const data = await response.json();

      if (data.status === 'tracking') {
        statusText.textContent = 'Tutor em rastreio (Tempo real).';
        updateMarker(data.latitude, data.longitude);
      } else if (data.status === 'offline') {
        statusText.textContent = 'Tutor offline ou rastreio pausado.';
        clearMarker();
      } else if (data.status === 'no-child') {
        statusText.textContent = 'Nenhum tutor atribuído ou criança encontrada.';
        clearMarker();
      } else {
        statusText.textContent = 'Aguardando o tutor iniciar o rastreio...';
        clearMarker();
      }

    } catch (err) {
      statusText.textContent = 'Erro de conexão com o servidor.';
    }
  }

  function initializeMap() {
    const locationsData = mapDiv.dataset.locations;
    const locations = JSON.parse(locationsData || '[]');
    const isTracking = mapDiv.dataset.tracking === 'true';

    if (locations.length > 0) {
      updateMarker(locations[0].latitude, locations[0].longitude);
      map.setView([locations[0].latitude, locations[0].longitude], 16);
    } else if ('geolocation' in navigator) {
      navigator.geolocation.getCurrentPosition(
        (pos) => map.setView([pos.coords.latitude, pos.coords.longitude], 13),
        () => map.setView([-15.7797, -47.9297], 4)
      );
    } else {
      map.setView([0, 0], 2);
    }
    
    if (isTracking || locations.length === 0) {
        fetchTutorLocation();
    }

    setInterval(fetchTutorLocation, 5000);
  }

  document.addEventListener('DOMContentLoaded', initializeMap);
</script>

<%- include('../partials/footer') %>

</body>
</html>