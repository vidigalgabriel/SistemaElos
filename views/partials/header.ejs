<header class="app-header">
  <link rel="manifest" href="/manifest.json">
  <div class="brand">
    <img src="/images/logoElos.jpg" alt="Logo Elos de Inclusão" class="app-logo-img">
    <div class="title">Elos de Inclusão</div>
  </div>

  <button class="nav-toggle" id="nav-toggle-button" aria-label="Abrir menu">
    <span class="hamburger-line"></span>
    <span class="hamburger-line"></span>
    <span class="hamburger-line"></span>
  </button>

  <nav class="role-menu" id="nav-menu">

    <% if (user && user.role === 'familia') { %>
      <a href="/familias/dashboard">Dashboard</a>
      <a href="/familias/buscarTutor">Tutores</a>
      <a href="/familias/mensagens">Mensagens</a>
      <a href="/familias/trajeto">Trajeto</a>
      <a href="/familias/registros">Registros</a>
      <a href="/profiles/<%= user._id %>">Perfil</a>

    <% } else if (user && user.role === 'tutor') { %>
      <a href="/tutors/dashboard">Dashboard</a>
      <a href="/tutors/atribuicoes">Atribuições</a>
      <a href="/tutors/mensagens">Mensagens</a>
      <a href="/tutors/mapa-rotas">Mapa</a>
      <a href="/tutors/registros">Registros</a>
      <a href="/profiles/<%= user._id %>">Perfil</a>
      
    <% } %>

    <form action="/users/logout?_method=DELETE" method="POST" class="logout-form">
      <button type="submit" class="logout-button">Sair</button>
    </form>

  </nav>
</header>

<style>
  .app-header {
    width: 100%;
    background: #2c5282;
    color: white;
    padding: 12px 16px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    box-shadow: 0 2px 6px rgba(0,0,0,0.15);
    position: sticky;
    top: 0;
    z-index: 1000;
  }
  .brand {
    display: flex;
    align-items: center;
    gap: 10px;
    z-index: 1001;
  }
  .app-logo-img {
    height: 48px; 
    max-width: 120px; 
    width: auto;
    flex-shrink: 0;
  }
  .title {
    font-size: 1.2rem;
    font-weight: 600;
  }

  .nav-toggle {
    display: none;
    background: none;
    border: none;
    cursor: pointer;
    padding: 10px;
    z-index: 1001;
  }
  .hamburger-line {
    display: block;
    width: 24px;
    height: 3px;
    background: white;
    margin: 5px 0;
    transition: all 0.3s ease;
  }
  
  .nav-toggle.is-active .hamburger-line:nth-child(1) {
    transform: translateY(8px) rotate(45deg);
  }
  .nav-toggle.is-active .hamburger-line:nth-child(2) {
    opacity: 0;
  }
  .nav-toggle.is-active .hamburger-line:nth-child(3) {
    transform: translateY(-8px) rotate(-45deg);
  }

  .role-menu {
    display: flex;
    align-items: center;
    gap: 14px;
  }
  .role-menu a {
    color: white;
    text-decoration: none;
    font-size: 0.95rem;
    padding: 6px 10px;
    border-radius: 6px;
    transition: background 0.2s, transform 0.1s ease;
    flex-shrink: 0;
  }
  .role-menu a:hover {
    background: rgba(255, 255, 255, 0.15);
  }
  .role-menu a:active {
      transform: scale(0.98);
  }

  .logout-form {
    margin: 0;
    padding: 0;
    display: flex;
    align-items: center;
  }
  .logout-button {
    background: rgba(255, 50, 50, 0.25);
    border: none;
    font: inherit;
    cursor: pointer;
    outline: inherit;
    color: white;
    text-decoration: none;
    font-size: 0.95rem;
    padding: 6px 10px;
    border-radius: 6px;
    transition: background 0.2s, transform 0.1s ease;
    flex-shrink: 0;
  }
  .logout-button:hover {
    background: rgba(255, 50, 50, 0.4);
  }
  .logout-button:active {
      transform: scale(0.98);
  }
  
  @media (max-width: 767px) {
    .nav-toggle {
      display: block;
    }
    .role-menu {
      position: fixed;
      top: 0;
      right: -100%;
      width: 70%;
      height: 100vh;
      display: flex;
      flex-direction: column;
      align-items: flex-start;
      justify-content: flex-start;
      background: #2c5282;
      padding: 80px 20px 20px 20px;
      box-shadow: -4px 0 10px rgba(0,0,0,0.2);
      transition: right 0.4s ease-in-out;
    }
    .role-menu.is-active {
      right: 0;
    }
    .role-menu a,
    .logout-form,
    .logout-button {
      width: 100%;
      text-align: left;
      font-size: 1.1rem;
    }
    .role-menu a {
        padding: 15px 10px;
    }
    .logout-form {
        margin-top: auto;
        width: 100%;
    }
    .logout-button {
      padding: 15px 10px;
      background: rgba(255, 50, 50, 0.4);
    }
    .app-logo-img {
        max-width: 100px;
        height: auto;
    }
    .title {
        display: none; 
    }
  }
</style>

<script>
  if (!document.body.dataset.navToggleScriptLoaded) {
    
    const navToggle = document.getElementById('nav-toggle-button');
    const navMenu = document.getElementById('nav-menu');

    if (navToggle && navMenu) {
      navToggle.addEventListener('click', () => {
        navToggle.classList.toggle('is-active');
        navMenu.classList.toggle('is-active');
      });
    }
    
    document.body.dataset.navToggleScriptLoaded = 'true';
  }
</script>